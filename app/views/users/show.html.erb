  <div class="row px-0 vh-100">


      <div class="center-left col-9 px-0 text-left text-dark ">

          <div class="cover-image">
              <%= coverphoto(@profile) %>
          </div>


          <nav class="navbar navbar-expand-lg mainsection border-bottom">
              <div class="collapse navbar-collapse" id="navbarNav">
                  <ul class="navbar-nav">
                      <li class="nav-item">
                          <%= link_to new_tweet_path do%>
                          <p class="nav-link text-dark mb-0">Tweets</p>
                          <%end%>
                      </li>
                      <li class="nav-item">
                          <a class="nav-link text-dark ">Photos</a>
                      </li>
                      <li class="nav-item">
                          <a class="nav-link text-dark">Videos</a>
                      </li>
                  </ul>
              </div>
          </nav>
          <br>



          <br>
          <div class="bg-white mx-5 px-5">
              <div>
                  <h5 class="pt-4 pb-2 text-primary border-bottom">
                      All Tweets
                  </h5>

                  <% @tweets.each do |x| %>
                  <%= render partial: 'users/usertweets', locals: {tweet: x} %>
                  <%end%>
              </div>

          </div>
      </div>

      <div class="center-right px-0 col-3 border">
          <br>

          <div class="profile text-center">
              <div class="photovistor">
                  <%=followerphoto1(@profile)%>
              </div>
              <br>

              <div class="visitortext text-muted">
                  <h5 class="text-capitalize font-weight-bold"> <%=@profile.fullname %> </h5>
                  <h6 class="text-lowercase font-weight-light"> @<%=@profile.username %> </h6>
              </div>
              <div class="followunfollow pt-1 pb-3">
                  <%=followorunfollow%>
              </div>

              <div class="container">
                  <div class="followtweetcount row mx-auto">
                      <div class="py-3 col-xl-4 px-0 text-muted text-center border">

                          <h6 class="font-weight-bold"> <%=@profile.tweets.count %> </h6>
                          <p class="font-weight-light my-0"> Tweets </p>

                      </div>


                      <div class="py-3 col-xl-4 px-0 text-muted text-center border">

                          <h6 class="font-weight-bold"> <%=@profile.follows.count %> </h6>
                          <p class="font-weight-light my-0"> Following </p>

                      </div>

                      <div class="py-3 col-xl-4 px-0 text-muted text-center border">

                          <h6 class="font-weight-bold"> <%=@profile.followers.count %> </h6>
                          <p class="font-weight-light my-0"> Followers </p>

                      </div>

                  </div>
              </div>

              <div class="followedby py-2">
                  <nav class="navbar mainsection border-bottom">
                      <p class="nav-link text-muted text-uppercase mb-0 font-weight-bold px-0">Followed By</p>
                  </nav>
                  <br>

                  <% @followers.each do |x| %>
                  <%=render partial: 'followedby', locals:{follower: x } %>
                  <%end%>

              </div>

          </div>
      </div>


  </div>

  </div>