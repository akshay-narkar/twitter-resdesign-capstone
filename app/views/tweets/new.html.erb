  <div class="row px-0 vh-100">
      <div class="center-left col-9 px-0 text-left text-dark border">

          <nav class="navbar navbar-expand-lg mainsection border-bottom">
              <div class="collapse navbar-collapse" id="navbarNav">
                  <ul class="navbar-nav">
                      <li class="nav-item">
                          <%= link_to new_tweet_path do%>
                          <p class="nav-link text-dark mb-0">Tweets</p>
                          <%end%>
                      </li>
                      <li class="nav-item">
                          <a class="nav-link text-dark ">Photos</a>
                      </li>
                      <li class="nav-item">
                          <a class="nav-link text-dark">Videos</a>
                      </li>
                  </ul>
              </div>
          </nav>
          <br>


          <div class="bg-white mx-5 px-5">
              <div>
                  <%= simple_form_for :@tweet , url: tweets_path do |x| %>
                  <h5 class="pt-4 pb-2">
                      Tweet Something:
                  </h5>
                  <p>
                      <%= x.text_area :text,class: "form-control"%>
                  </p>
                  <p class="pb-3">
                      <%= x.submit "Tweet", class: "btn btn-primary" %>
                  </p>

                  <%end%>
              </div>
          </div>
          <br>
          <div class="bg-white mx-5 px-5">
              <div>
                  <h5 class="pt-4 pb-2 text-primary border-bottom">
                      All Tweets
                  </h5>

                  <% @tweets.each do |x| %>
                  <%=checkiffollowed(x,@following)%>
                  <%end%>
              </div>

          </div>
      </div>

      <div class="center-right px-0 col-3 border">
          <nav class="navbar mainsection border-bottom">
              <p class="nav-link text-secondary text-uppercase mb-0">Who To Follow</p>
          </nav>

          <%= render 'tweets/whotofollow'%>

      </div>

  </div>